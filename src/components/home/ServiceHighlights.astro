---
import FeatureShowcase from '../react/FeatureShowcase';
---

<section class="py-24 bg-light-tan">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <div class="inline-block px-4 py-2 mb-4 text-sm font-semibold rounded-full bg-light-tan-dark text-brown">
        Services
      </div>
      <h2 class="text-4xl md:text-5xl font-bold mb-6 text-brown">
        <!-- Comprehensive <span class="gradient-text">Solutions</span> -->
        Martial Arts and Fitness
      </h2>
      <p class="text-xl max-w-3xl mx-auto leading-relaxed text-brown-light">
        -- Put blurb here about the types of services Ken wants to offer --
      </p>
    </div>

    <FeatureShowcase client:load />
    
    <!-- Bottom CTA -->    <div class="text-center mt-16">
      <a 
        href="/contact" 
        class="inline-flex items-center px-8 py-4 text-base font-semibold text-white rounded-lg shadow-lg hover:shadow-xl transition-all group bg-gradient-burgundy"
      >
        Start Training Now
        <svg class="w-5 h-5 ml-2 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
        </svg>
      </a>
    </div>
  </div>
</section>

