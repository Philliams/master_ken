---
import FeatureShowcase from '../react/FeatureShowcase';
---

<section class="py-24" style="background-color: #f2d1b5;">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <div class="inline-block px-4 py-2 mb-4 text-sm font-semibold rounded-full" style="background-color: #e1b486; color: #331d1d;">
        Our Services
      </div>
      <h2 class="text-4xl md:text-5xl font-bold mb-6" style="color: #331d1d;">
        Comprehensive <span class="gradient-text">Solutions</span>
      </h2>
      <p class="text-xl max-w-3xl mx-auto leading-relaxed" style="color: #4a2f2f;">
        End-to-end logistics and manufacturing services powered by cutting-edge technology 
        and tailored to your unique business needs.
      </p>
    </div>

    <FeatureShowcase client:load />
    
    <!-- Bottom CTA -->    <div class="text-center mt-16">
      <a 
        href="/capabilities" 
        class="inline-flex items-center px-8 py-4 text-base font-semibold text-white rounded-lg shadow-lg hover:shadow-xl transition-all group"
        style="background: linear-gradient(135deg, #9f3434 0%, #7a2828 100%);"
      >
        Explore All Capabilities
        <svg class="w-5 h-5 ml-2 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
        </svg>
      </a>
    </div>
  </div>
</section>

