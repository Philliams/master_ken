---
interface Industry {
  title: string;
  description: string;
  iconGradient: string;
  iconPath: string;
  features: string[];
}

const industries: Industry[] = [
  {
    title: "Taekwondo",
    description: "Having trained, competed and coached at the World Championship level in both Canada and South Korea, Master Ken has a deep and storied history with Taekwondo.",
    iconGradient: "from-blue-500 to-blue-600",
    iconPath: "M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z",
    features: [
      "Song Moo Kwan Taekwondo 6th Dan Black Belt",
      "Kukkiwon 5th Dan Black Belt",
      "Competed at 2007 World Championships"
    ]
  },
  {
    title: "Hapkido",
    description: "Master Ken holds a 1st Dan blackbelt in Hapkido, and has trained with 5th Dan Master -- Name -- and participated in seminars with 9th Dan Hapkido Grand Master Kim Nam Jai.",
    iconGradient: "from-teal-500 to-teal-600",
    iconPath: "M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z",
    features: [
      "1st Dan Black Belt Kyung Mu Kwan system",
      "-- Other good bullet points --?",
    ]
  },
  {
    title: "Boxing",
    description: "With a striking background spanning twenty years, Master Ken brings a wealth of ring-tested knowledge to the dojo.",
    iconGradient: "from-blue-600 to-teal-600",
    iconPath: "M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z",
    features: [
      "NCCP certified Boxing Coach",
      "Seminars with World Champions and UFC fighters",
    ]
  }
];

// const checkmarkPath = "M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z";


---

<section class="py-24 bg-light-tan">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <div class="inline-block px-4 py-2 mb-4 text-sm font-semibold rounded-full bg-light-tan-dark text-brown">
        Meet Master Ken
      </div>
      <h2 class="text-4xl md:text-5xl font-bold mb-6 text-brown">
        A Lifetime Dedicated to <span class="gradient-text">Martial Arts</span>
      </h2>
      <p class="text-xl max-w-3xl mx-auto leading-relaxed text-brown-light">
        -- A blurb about Ken's experience and life journey--
        - Trained in Canada and South Korea, ran his own dojo, etc.
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {industries.map((industry, index) => (
        <div class="group rounded-2xl p-8 shadow-lg hover:shadow-2xl transition-all hover:-translate-y-2 border border-slate-100 bg-white">
          <!-- <div class={`w-16 h-16 rounded-xl flex items-center justify-center mb-6 group-hover:scale-110 transition-transform ${index % 2 === 0 ? 'bg-gradient-burgundy' : 'bg-gradient-tan'}`}>
            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={industry.iconPath} />
            </svg>
          </div> -->
          <h3 class="text-2xl font-bold text-slate-900 mb-3">{industry.title}</h3>
          <p class="text-slate-600 leading-relaxed mb-4">
            {industry.description}
          </p>          <ul class="space-y-2 text-sm text-slate-600">
            {industry.features.map((feature) => (
              <li class="flex items-center">
                <!-- <svg class="w-4 h-4 mr-2 text-tan" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d={checkmarkPath} clip-rule="evenodd" />
                </svg> -->
                &#8227; {feature}
              </li>
            ))}
          </ul>
        </div>
      ))}
    </div>    <!-- Bottom CTA -->
    <div class="text-center mt-16">
      <a 
        href="/about" 
        class="inline-flex items-center px-8 py-4 text-base font-semibold text-white rounded-lg shadow-lg hover:shadow-xl transition-all group bg-gradient-burgundy"
      >
        About Master Ken
        <svg class="w-5 h-5 ml-2 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
        </svg>
      </a>
    </div>
  </div>
</section>
