---
import { Image } from 'astro:assets';
import Button from '../ui/Button.astro';
import heroBgImg from '@assets/taekwondo_hero.jpg';
---

<section class="relative h-screen min-h-[600px] flex items-center overflow-hidden">  <!-- Background Image with Overlay -->
  <div class="absolute inset-0">
    <Image 
      src={heroBgImg}
      alt="Traditional Martial Arts"
      class="w-full h-full object-cover"
      width={2070}
      height={1380}
      decoding="async"
      fetchpriority="high"
    />
    <div class="absolute inset-0 bg-gradient-to-r from-stone-900/95 via-stone-900/80 to-stone-900/50"></div>
  </div>
  <!-- Content -->
  <div class="container mx-auto relative z-10 px-4 sm:px-6 lg:px-8">    <div class="max-w-4xl">
      <div class="inline-flex items-center px-4 py-2 mb-6 bg-gradient-burgundy text-white text-sm font-semibold rounded-full shadow-lg">
        <!-- <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M11.3 1.046A1 1 0 0112 2v5h4a1 1 0 01.82 1.573l-7 10A1 1 0 018 18v-5H4a1 1 0 01-.82-1.573l7-10a1 1 0 011.12-.38z" clip-rule="evenodd" />
        </svg> -->
        Martial Arts and Personal Fitness
      </div>
      
      <h1 class="text-4xl md:text-6xl lg:text-7xl font-bold text-white mb-6 leading-tight">
        Master Ken Traditional and Mixed Martial Arts
        <span class="hero-gradient-text block mt-2">
          40 Years in the making
        </span>
      </h1>
      
      <p class="text-xl md:text-2xl text-slate-200 mb-8 max-w-2xl leading-relaxed">
        -- Put paragraph here for ken's philosopy -- 
      </p>
      
      <div class="flex flex-col sm:flex-row gap-4 mb-12">
        <Button href="/contact" size="lg" class="bg-burgundy! hover:bg-burgundy-dark! text-white! shadow-2xl!">
          Contact
        </Button>
        <Button href="/traditional_martial_arts" size="lg" variant="outline" class="border-2! border-white! text-white! hover:bg-white/10! shadow-2xl!">
          Traditional Martial Arts
        </Button>
        <Button href="/mixed_martial_arts" size="lg" variant="outline" class="border-2! border-white! text-white! hover:bg-white/10! shadow-2xl!">
          Mixed Martial Arts
        </Button>
      </div>      <!-- Quick Stats -->
      <div class="grid grid-cols-2 md:grid-cols-3 gap-6 pt-8 border-t border-white/20">
        <div class="group">
          <div class="stat-gradient text-2xl md:text-3xl font-bold mb-1 pb-1">Taekwondo</div>
          <div class="text-sm text-slate-300 group-hover:text-white transition-colors">6th Dan</div>
        </div>
        <div class="group">
          <div class="stat-gradient text-2xl md:text-3xl font-bold mb-1 pb-1">Hapkido</div>
          <div class="text-sm text-slate-300 group-hover:text-white transition-colors">1st Dan</div>
        </div>
        <div class="group">
          <div class="stat-gradient text-2xl md:text-3xl font-bold mb-1 pb-1">Boxing</div>
          <div class="text-sm text-slate-300 group-hover:text-white transition-colors">NCCP Certified</div>
        </div>
      </div>
    </div>
  </div>
  <!-- Scroll indicator -->
  <div class="absolute bottom-8 left-1/2 -translate-x-1/2 animate-bounce">
    <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3" />
    </svg>
  </div>
</section>

<style>
  .hero-gradient-text {
    background: linear-gradient(135deg, #9f3434 0%, #8d7051 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }
  
  .stat-gradient {
    background: linear-gradient(to right, #ffffff, #e1b486);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }
</style>

