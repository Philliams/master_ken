      <!-- Contact -->
      <div>
        <h3 class="text-sm font-semibold uppercase tracking-wider text-white mb-6">
          Get Started
        </h3>        <ul class="space-y-3 text-sm">          <li>
            <a href="/rfq" class="text-slate-400 hover:text-tan transition-colors inline-flex items-center group">
              <span class="w-0 group-hover:w-2 h-0.5 bg-tan transition-all mr-0 group-hover:mr-2"></span>
