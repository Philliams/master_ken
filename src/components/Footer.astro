import { Package, Linkedin, Twitter, Facebook } from 'lucide-react';
import { Image } from 'astro:assets';

import logoImg from '@assets/logo-bird.png';

---

<footer class="bg-slate-900 text-slate-300">
  <div class="container mx-auto px-4 py-16 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 gap-12 lg:grid-cols-4">
      <!-- Company Info -->      <div class="lg:col-span-1 space-y-6">        <a href="/" class="flex items-center space-x-3 group">
          <div class="flex items-center justify-center w-12 h-12 rounded-lg bg-gradient-warm">
            <!-- <Package className="w-7 h-7 text-white" /> -->
            <Image 
            src={logoImg}
            alt= "Master Ken logo"
            class="w-7 h-7 object-cover"
            width={40}
            height={40}
          />
          </div>
          <span class="text-2xl font-bold text-white">
            Master Ken
          </span>
        </a>
        <p class="text-sm text-slate-400 leading-relaxed max-w-xs">
          {SITE.description}
        </p>        <div class="flex space-x-4">
          <a
            href={SOCIAL_LINKS.linkedin}
            class="w-10 h-10 flex items-center justify-center rounded-lg bg-slate-800 text-slate-400 hover:bg-burgundy hover:text-white transition-all"
            aria-label="LinkedIn"
          >
            <Linkedin className="w-5 h-5" />
          </a>
          <a
            href={SOCIAL_LINKS.twitter}
            class="w-10 h-10 flex items-center justify-center rounded-lg bg-slate-800 text-slate-400 hover:bg-tan hover:text-white transition-all"
            aria-label="Twitter"
          >
            <Twitter className="w-5 h-5" />
          </a>
          <a
            href={SOCIAL_LINKS.facebook}
            class="w-10 h-10 flex items-center justify-center rounded-lg bg-slate-800 text-slate-400 hover:bg-burgundy hover:text-white transition-all"
            aria-label="Facebook"
          >
            <Facebook className="w-5 h-5" />
          </a>
        </div>
      </div>

      <!-- Quick Links -->
      <div>
        <h3 class="text-sm font-semibold uppercase tracking-wider text-white mb-6">
          Quick Links
        </h3>        <ul class="space-y-3">
          {NAVIGATION.map((item) => (
            <li>
              <a
                href={item.href}
                class="text-sm text-slate-400 hover:text-tan transition-colors inline-flex items-center group"
              >
                <span class="w-0 group-hover:w-2 h-0.5 bg-tan transition-all mr-0 group-hover:mr-2"></span>
                {item.name}
              </a>
            </li>
          ))}
        </ul>
      </div>

